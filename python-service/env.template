# Python OpenCV Service Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
OPENCV_HOST=0.0.0.0
OPENCV_PORT=5001
OPENCV_DEBUG=false

# ===========================================
# OPENCV CONFIGURATION
# ===========================================
# Number of ORB features to extract (lower = faster, higher = more accurate)
ORB_FEATURES=500
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=52428800  # 50MB
# Request timeout in seconds
REQUEST_TIMEOUT=30

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
ENABLE_METRICS=true

# ===========================================
# GUNICORN CONFIGURATION (PRODUCTION)
# ===========================================
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=sync
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_MAX_REQUESTS=1000
GUNICORN_TIMEOUT=30

# ===========================================
# PERFORMANCE TUNING
# ===========================================
# Use shared memory for worker temp files (faster)
WORKER_TMP_DIR=/dev/shm
# Graceful shutdown timeout
GRACEFUL_TIMEOUT=30

# ===========================================
# SECURITY (OPTIONAL)
# ===========================================
# Uncomment and configure if using SSL
# SSL_KEYFILE=/path/to/ssl/keyfile
# SSL_CERTFILE=/path/to/ssl/certfile

# ===========================================
# DEVELOPMENT
# ===========================================
# Enable debug mode for development
FLASK_DEBUG=false
# Enable detailed logging
VERBOSE_LOGGING=true
