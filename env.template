# ArchivArt Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=archivart

# ===========================================
# JWT & SESSION SECURITY
# ===========================================
JWT_SECRET=your_jwt_secret_key_here_archivart_2024
SESSION_SECRET=your_session_secret_here_archivart_2024

# ===========================================
# AWS S3 CONFIGURATION
# ===========================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=temp
AWS_S3_FILE_PATH=uploads/
AWS_S3_BUCKET_URL=https://your.s3.amazonaws.com/

# ===========================================
# OAUTH CONFIGURATION
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# PYTHON OPENCV SERVICE CONFIGURATION
# ===========================================
# URL to the Python OpenCV service
# Local: http://localhost:5001
# Production: https://your-python-service.onrender.com
OPENCV_SERVICE_URL=http://localhost:5001

# ===========================================
# STATIC FILES & CDN
# ===========================================
# Base URL for serving static files and images
# Local: http://localhost:3000
# Production: https://your-domain.com
# CDN: https://cdn.your-domain.com
IMAGE_BASE_URL=http://localhost:3000

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================
# Enable debug logging
DEBUG=true
# Enable detailed error messages
VERBOSE_ERRORS=true
