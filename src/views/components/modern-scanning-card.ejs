<!-- Modern Scanning Image Upload Card -->
<div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-white/20 overflow-hidden">
    <div class="p-6 border-b border-gray-100">
        <div class="flex items-center space-x-3">
            <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-pink-600 rounded-lg flex items-center justify-center">
                <i class="fas fa-qrcode text-white text-sm"></i>
            </div>
            <div>
                <h3 class="text-lg font-semibold text-gray-900">AR Trigger Image</h3>
                <p class="text-sm text-gray-600">Image that will trigger the AR experience</p>
            </div>
        </div>
    </div>
    
    <div class="p-6">
        <!-- Hidden Scanning Image Input -->
        <input type="file" id="scanning-image-input" accept="image/*" style="display: none;">
        
        <!-- Scanning Image Drop Zone -->
        <div class="border-2 border-dashed border-gray-300 rounded-xl p-6 text-center hover:border-purple-400 hover:bg-purple-50/50 transition-all duration-300 cursor-pointer" id="scanning-image-drop-zone">
            <div class="space-y-3">
                <div class="mx-auto w-12 h-12 bg-gradient-to-br from-purple-100 to-pink-100 rounded-xl flex items-center justify-center">
                    <i class="fas fa-image text-lg text-purple-600" id="scanning-image-icon"></i>
                </div>
                <div>
                    <h4 class="text-base font-semibold text-gray-900" id="scanning-image-text">Upload AR Trigger</h4>
                    <p class="text-sm text-gray-600 mt-1">This image will trigger your AR content</p>
                    <div class="flex items-center justify-center space-x-3 text-xs text-gray-500 mt-2">
                        <span>JPG, PNG, GIF</span>
                        <span>â€¢</span>
                        <span>Max 10MB</span>
                    </div>
                </div>
                <button type="button" class="inline-flex items-center px-3 py-2 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-sm font-semibold rounded-lg hover:from-purple-700 hover:to-pink-700 transition-all duration-300 shadow-lg hover:shadow-xl" id="choose-scanning-image-btn">
                    <i class="fas fa-upload mr-2"></i>
                    Choose Image
                </button>
            </div>
        </div>
        
        <!-- Scanning Image Preview -->
        <div id="scanning-image-preview" class="mt-3 hidden">
            <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-xl p-3 border border-purple-200">
                <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                        <img id="scanning-image-thumbnail" class="h-10 w-10 rounded-lg object-cover border-2 border-white shadow-sm" src="" alt="AR trigger preview">
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-semibold text-gray-900 truncate" id="scanning-image-name"></p>
                        <p class="text-xs text-gray-600" id="scanning-image-size"></p>
                    </div>
                    <button type="button" class="text-red-500 hover:text-red-700 p-1.5 rounded-lg hover:bg-red-50 transition-colors" id="remove-scanning-image">
                        <i class="fas fa-trash text-sm"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
