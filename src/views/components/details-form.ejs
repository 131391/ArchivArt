<!-- Details Card -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="mb-4">
        <h3 class="text-lg font-semibold text-gray-900" id="details-title">Video Details</h3>
        <p class="text-sm text-gray-600" id="details-subtitle">Additional information for your video</p>
    </div>
    
    <form id="media-form" class="space-y-4">
        <div>
            <label for="media-title" class="block text-sm font-medium text-gray-700 mb-1">Title</label>
            <input type="text" id="media-title" name="title" placeholder="Enter video title" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none">
        </div>
        
        <div>
            <label for="media-description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <textarea id="media-description" name="description" rows="4" placeholder="Enter video description" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"></textarea>
        </div>

        <div>
            <label for="scanning-image" class="block text-sm font-medium text-gray-700 mb-1">
                <i class="fas fa-image mr-1"></i>Scanning Image *
            </label>
            <!-- Hidden Scanning Image Input -->
            <input type="file" id="scanning-image-input" accept="image/*" style="display: none;">
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center hover:border-blue-400 hover:bg-blue-50 transition-all duration-200 cursor-pointer" id="scanning-image-drop-zone">
                <div class="space-y-2">
                    <div class="mx-auto w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-image text-lg text-gray-400" id="scanning-image-icon"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-900" id="scanning-image-text">Upload Scanning Image</p>
                        <p class="text-xs text-gray-600">Drag and drop your scanning image here, or click to browse</p>
                        <p class="text-xs text-gray-500 mt-1">JPEG, PNG, GIF, WebP (Max: 10MB)</p>
                    </div>
                    <button type="button" class="inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors" id="choose-scanning-image-btn">
                        <i class="fas fa-upload mr-1"></i>
                        Choose Image
                    </button>
                </div>
            </div>
            
            <!-- Scanning Image Preview -->
            <div id="scanning-image-preview" class="mt-3 hidden">
                <div class="bg-gray-50 rounded-lg p-3">
                    <div class="flex items-center space-x-3">
                        <div class="flex-shrink-0">
                            <img id="scanning-image-thumbnail" class="h-12 w-12 rounded object-cover" src="" alt="Scanning image preview">
                        </div>
                        <div class="flex-1 min-w-0">
                            <p class="text-sm font-medium text-gray-900 truncate" id="scanning-image-name"></p>
                            <p class="text-sm text-gray-500" id="scanning-image-size"></p>
                        </div>
                        <button type="button" class="text-red-500 hover:text-red-700" id="remove-scanning-image">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" id="submit-button" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors flex items-center justify-center">
            <i class="fas fa-save mr-2"></i>
            <span id="submit-text">Save Media</span>
        </button>
    </form>
</div>
