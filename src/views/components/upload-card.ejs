<!-- Upload Card -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="mb-4">
        <h3 class="text-lg font-semibold text-gray-900" id="upload-title">Upload Video</h3>
        <p class="text-sm text-gray-600" id="upload-subtitle">Supported formats: MP4, AVI, MOV (Max: 800MB)</p>
    </div>
    
    <!-- Hidden File Input -->
    <input type="file" id="file-input" accept="video/*,audio/*,image/*" style="display: none;">
    
    <!-- Drag and Drop Area -->
    <div class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center hover:border-blue-400 hover:bg-blue-50 transition-all duration-200 cursor-pointer" id="drop-zone">
        <div class="space-y-4">
            <div class="mx-auto w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                <i class="fas fa-camera text-2xl text-blue-600" id="upload-icon"></i>
            </div>
            <div>
                <h4 class="text-lg font-medium text-gray-900" id="upload-text">Upload Video</h4>
                <p class="text-sm text-gray-600 mt-1">Drag and drop your video files here, or click to browse</p>
            </div>
            <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors" id="choose-files-btn">
                <i class="fas fa-upload mr-2"></i>
                Choose Files
            </button>
        </div>
    </div>

    <!-- File Preview -->
    <div id="file-preview" class="mt-4 hidden">
        <div class="bg-gray-50 rounded-lg p-4">
            <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                    <i class="fas fa-file text-2xl text-gray-400" id="file-icon"></i>
                </div>
                <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate" id="file-name"></p>
                    <p class="text-sm text-gray-500" id="file-size"></p>
                </div>
                <button type="button" class="text-red-500 hover:text-red-700" id="remove-file">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</div>
