<div class="space-y-4">
    <!-- Header with Gradient -->
    <div class="relative overflow-hidden bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 rounded-2xl shadow-xl">
        <div class="absolute inset-0 bg-black opacity-10"></div>
        <div class="relative px-8 py-12">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-bold text-white mb-2">
                        <i class="fas fa-cog mr-3"></i>Settings
                    </h1>
                    <p class="text-indigo-100 text-lg">Configure your ArchivArt application</p>
                </div>
                <div class="hidden md:block">
                    <div class="w-24 h-24 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                        <i class="fas fa-sliders-h text-white text-3xl"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Brand & Logo Settings -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden settings-card">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <i class="fas fa-palette mr-3 text-blue-600"></i>Brand & Logo
            </h3>
            <p class="text-gray-600 mt-1">Customize your application's visual identity</p>
        </div>
        
        <div class="p-6">
            <form id="brandForm" enctype="multipart/form-data">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Logo Upload Section -->
                    <div class="space-y-4">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <i class="fas fa-image mr-2 text-indigo-600"></i>Logo Upload
                        </h4>
                        
                        <!-- Current Logo Display -->
                        <div class="flex items-center space-x-4">
                            <div id="currentLogo" class="w-20 h-20 bg-gray-100 rounded-lg flex items-center justify-center border-2 border-dashed border-gray-300">
                                <% if (settings && settings.logo_path) { %>
                                    <img src="<%= settings.logo_path %>" alt="Current Logo" class="w-full h-full object-contain rounded-lg">
                                <% } else { %>
                                    <i class="fas fa-image text-gray-400 text-2xl"></i>
                                <% } %>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-700">Current Logo</p>
                                <p class="text-xs text-gray-500">Recommended: 200x200px, PNG/JPG</p>
                            </div>
                        </div>
                        
                        <!-- Logo Upload -->
                        <div class="space-y-2">
                            <label for="logo" class="block text-sm font-medium text-gray-700">
                                Upload New Logo
                            </label>
                            <div class="relative">
                                <input type="file" id="logo" name="logo" accept="image/*" 
                                       class="hidden">
                                <label for="logo" 
                                       class="cursor-pointer flex items-center justify-center w-full px-4 py-3 border-2 border-dashed border-gray-300 rounded-lg hover:border-indigo-400 hover:bg-indigo-50 transition-colors logo-upload-area">
                                    <i class="fas fa-cloud-upload-alt mr-2 text-gray-400"></i>
                                    <span class="text-sm text-gray-600">Choose logo file</span>
                                </label>
                            </div>
                            <p class="text-xs text-gray-500">Max file size: 5MB. Supported formats: PNG, JPG, SVG</p>
                        </div>
                    </div>
                    
                    <!-- Brand Settings -->
                    <div class="space-y-4">
                        <h4 class="text-lg font-medium text-gray-900 flex items-center">
                            <i class="fas fa-tag mr-2 text-indigo-600"></i>Brand Information
                        </h4>
                        
                        <div class="space-y-4">
                            <div>
                                <label for="site_name" class="block text-sm font-medium text-gray-700 mb-2">
                                    Application Name
                                </label>
                                <input type="text" name="site_name" id="site_name" 
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors"
                                       value="<%= settings && settings.site_name ? settings.site_name : 'ArchivArt' %>" placeholder="Enter application name">
                            </div>
                            
                            <div>
                                <label for="site_tagline" class="block text-sm font-medium text-gray-700 mb-2">
                                    Tagline
                                </label>
                                <input type="text" name="site_tagline" id="site_tagline" 
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors"
                                       value="<%= settings && settings.site_tagline ? settings.site_tagline : '' %>" placeholder="Enter your tagline">
                            </div>
                            
                            <div>
                                <label for="primary_color" class="block text-sm font-medium text-gray-700 mb-2">
                                    Primary Color
                                </label>
                                <div class="flex items-center space-x-3">
                                    <input type="color" name="primary_color" id="primary_color" 
                                           class="w-12 h-12 border border-gray-300 rounded-lg cursor-pointer color-picker-enhanced"
                                           value="<%= settings && settings.primary_color ? settings.primary_color : '#4f46e5' %>">
                                    <input type="text" id="primary_color_text" 
                                           class="flex-1 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                                           value="<%= settings && settings.primary_color ? settings.primary_color : '#4f46e5' %>" placeholder="#4f46e5">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="mt-6 flex justify-end">
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-medium rounded-lg hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i class="fas fa-save mr-2"></i>
                        Save Brand Settings
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- System Settings -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden settings-card">
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 px-6 py-4 border-b border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <i class="fas fa-cog mr-3 text-green-600"></i>System Settings
            </h3>
            <p class="text-gray-600 mt-1">Configure core application settings</p>
        </div>
        
        <div class="p-6">
            <form id="systemForm">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="max_file_size" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-file mr-2 text-gray-500"></i>Max File Size (MB)
                        </label>
                        <input type="number" name="max_file_size" id="max_file_size" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
                               value="<%= settings && settings.max_file_size ? settings.max_file_size : 100 %>" min="1" max="1000">
                        <p class="text-xs text-gray-500 mt-1">Maximum file size for uploads</p>
                    </div>
                    
                    <div>
                        <label for="max_uploads_per_day" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-upload mr-2 text-gray-500"></i>Max Uploads Per Day
                        </label>
                        <input type="number" name="max_uploads_per_day" id="max_uploads_per_day" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
                               value="<%= settings && settings.max_uploads_per_day ? settings.max_uploads_per_day : 50 %>" min="1" max="1000">
                        <p class="text-xs text-gray-500 mt-1">Daily upload limit per user</p>
                    </div>
                </div>
                
                <div class="mt-6 flex justify-end">
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-600 to-emerald-600 text-white font-medium rounded-lg hover:from-green-700 hover:to-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i class="fas fa-save mr-2"></i>
                        Save System Settings
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- AWS S3 Settings -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden settings-card">
        <div class="bg-gradient-to-r from-orange-50 to-amber-50 px-6 py-4 border-b border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <i class="fas fa-cloud mr-3 text-orange-600"></i>AWS S3 Settings
            </h3>
            <p class="text-gray-600 mt-1">Configure cloud storage settings</p>
        </div>
        
        <div class="p-6">
            <form id="awsForm">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="aws_bucket" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-database mr-2 text-gray-500"></i>S3 Bucket Name
                        </label>
                        <input type="text" name="aws_bucket" id="aws_bucket" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors"
                               value="<%= settings && settings.aws_bucket ? settings.aws_bucket : 'archivart-media' %>" placeholder="your-bucket-name">
                    </div>
                    
                    <div>
                        <label for="aws_region" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-globe mr-2 text-gray-500"></i>AWS Region
                        </label>
                        <select name="aws_region" id="aws_region" 
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-colors">
                            <option value="us-east-1" <%= settings && settings.aws_region === 'us-east-1' ? 'selected' : '' %>>US East (N. Virginia)</option>
                            <option value="us-west-2" <%= settings && settings.aws_region === 'us-west-2' ? 'selected' : '' %>>US West (Oregon)</option>
                            <option value="eu-west-1" <%= settings && settings.aws_region === 'eu-west-1' ? 'selected' : '' %>>Europe (Ireland)</option>
                            <option value="ap-southeast-1" <%= settings && settings.aws_region === 'ap-southeast-1' ? 'selected' : '' %>>Asia Pacific (Singapore)</option>
                        </select>
                    </div>
                </div>
                
                <div class="mt-6 flex justify-end">
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-orange-600 to-amber-600 text-white font-medium rounded-lg hover:from-orange-700 hover:to-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i class="fas fa-save mr-2"></i>
                        Save AWS Settings
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Security Settings -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden settings-card">
        <div class="bg-gradient-to-r from-red-50 to-pink-50 px-6 py-4 border-b border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <i class="fas fa-shield-alt mr-3 text-red-600"></i>Security Settings
            </h3>
            <p class="text-gray-600 mt-1">Configure security and authentication</p>
        </div>
        
        <div class="p-6">
            <form id="securityForm">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="jwt_expiry" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-clock mr-2 text-gray-500"></i>JWT Token Expiry (hours)
                        </label>
                        <input type="number" name="jwt_expiry" id="jwt_expiry" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                               value="<%= settings && settings.jwt_expiry ? settings.jwt_expiry : 24 %>" min="1" max="168">
                        <p class="text-xs text-gray-500 mt-1">Token validity period</p>
                    </div>
                    
                    <div>
                        <label for="session_timeout" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-hourglass-half mr-2 text-gray-500"></i>Session Timeout (hours)
                        </label>
                        <input type="number" name="session_timeout" id="session_timeout" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                               value="<%= settings && settings.session_timeout ? settings.session_timeout : 24 %>" min="1" max="168">
                        <p class="text-xs text-gray-500 mt-1">User session duration</p>
                    </div>
                </div>
                
                <div class="mt-6 flex justify-end">
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-red-600 to-pink-600 text-white font-medium rounded-lg hover:from-red-700 hover:to-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i class="fas fa-save mr-2"></i>
                        Save Security Settings
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Email Settings -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden settings-card">
        <div class="bg-gradient-to-r from-blue-50 to-cyan-50 px-6 py-4 border-b border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <i class="fas fa-envelope mr-3 text-blue-600"></i>Email Settings
            </h3>
            <p class="text-gray-600 mt-1">Configure email notifications and SMTP</p>
        </div>
        
        <div class="p-6">
            <form id="emailForm">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="smtp_host" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-server mr-2 text-gray-500"></i>SMTP Host
                        </label>
                        <input type="text" name="smtp_host" id="smtp_host" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                               value="<%= settings && settings.smtp_host ? settings.smtp_host : '' %>" placeholder="smtp.gmail.com">
                    </div>
                    
                    <div>
                        <label for="smtp_port" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-plug mr-2 text-gray-500"></i>SMTP Port
                        </label>
                        <input type="number" name="smtp_port" id="smtp_port" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                               value="<%= settings && settings.smtp_port ? settings.smtp_port : '' %>" placeholder="587">
                    </div>
                    
                    <div>
                        <label for="smtp_user" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-user mr-2 text-gray-500"></i>SMTP Username
                        </label>
                        <input type="email" name="smtp_user" id="smtp_user" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                               value="<%= settings && settings.smtp_user ? settings.smtp_user : '' %>" placeholder="your-email@gmail.com">
                    </div>
                    
                    <div>
                        <label for="smtp_password" class="block text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-lock mr-2 text-gray-500"></i>SMTP Password
                        </label>
                        <input type="password" name="smtp_password" id="smtp_password" 
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                               value="<%= settings && settings.smtp_password ? settings.smtp_password : '' %>" placeholder="••••••••">
                    </div>
                </div>
                
                <div class="mt-6 flex justify-end">
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-cyan-600 text-white font-medium rounded-lg hover:from-blue-700 hover:to-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 shadow-lg hover:shadow-xl">
                        <i class="fas fa-save mr-2"></i>
                        Save Email Settings
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- System Information -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden settings-card">
        <div class="bg-gradient-to-r from-gray-50 to-slate-50 px-6 py-4 border-b border-gray-100">
            <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                <i class="fas fa-info-circle mr-3 text-gray-600"></i>System Information
            </h3>
            <p class="text-gray-600 mt-1">Current system status and metrics</p>
        </div>
        
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-xl border border-blue-200 system-info-card">
                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="font-semibold text-blue-900">Node.js Version</h4>
                            <p class="text-2xl font-bold text-blue-700 mt-1">v18.17.0</p>
                        </div>
                        <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-code text-white text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-xl border border-green-200 system-info-card">
                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="font-semibold text-green-900">Database</h4>
                            <p class="text-2xl font-bold text-green-700 mt-1">MySQL 8.0</p>
                        </div>
                        <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-database text-white text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gradient-to-br from-orange-50 to-orange-100 p-6 rounded-xl border border-orange-200 system-info-card">
                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="font-semibold text-orange-900">Storage</h4>
                            <p class="text-2xl font-bold text-orange-700 mt-1">AWS S3</p>
                        </div>
                        <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-cloud text-white text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-6 rounded-xl border border-purple-200 system-info-card">
                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="font-semibold text-purple-900">Uptime</h4>
                            <p class="text-2xl font-bold text-purple-700 mt-1">2d 14h</p>
                        </div>
                        <div class="w-12 h-12 bg-purple-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-clock text-white text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gradient-to-br from-pink-50 to-pink-100 p-6 rounded-xl border border-pink-200 system-info-card">
                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="font-semibold text-pink-900">Memory Usage</h4>
                            <p class="text-2xl font-bold text-pink-700 mt-1">45.2 MB</p>
                        </div>
                        <div class="w-12 h-12 bg-pink-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-memory text-white text-xl"></i>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 p-6 rounded-xl border border-indigo-200 system-info-card">
                    <div class="flex items-center justify-between">
                        <div>
                            <h4 class="font-semibold text-indigo-900">Disk Usage</h4>
                            <p class="text-2xl font-bold text-indigo-700 mt-1">2.1 GB</p>
                        </div>
                        <div class="w-12 h-12 bg-indigo-500 rounded-lg flex items-center justify-center">
                            <i class="fas fa-hdd text-white text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Settings JavaScript - loaded from admin layout -->
