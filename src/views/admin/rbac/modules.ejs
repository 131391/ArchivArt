
<!-- Include Common Table Component -->
<%- include('../../components/table', {
    title: title,
    data: data,
    showSearch: true,
    showFilters: false,
    searchPlaceholder: 'Search modules...',
    columns: [
        { key: 'id', label: 'ID', sortable: true },
        { key: 'display_name', label: 'Module', sortable: true, type: 'custom', formatter: 'formatModule' },
        { key: 'name', label: 'Name', sortable: true, type: 'custom', formatter: 'formatModuleName' },
        { key: 'icon', label: 'Icon', sortable: false, type: 'custom', formatter: 'formatModuleIcon' },
        { key: 'route', label: 'Route', sortable: true, type: 'custom', formatter: 'formatModuleRoute' },
        { key: 'order_index', label: 'Order', sortable: true, type: 'custom', formatter: 'formatModuleOrder' },
        { key: 'action_count', label: 'Actions', sortable: true, type: 'custom', formatter: 'formatModuleActions' },
        { key: 'permission_count', label: 'Permissions', sortable: true, type: 'custom', formatter: 'formatModulePermissions' }
    ],
    actions: [
        { name: 'view', label: 'View', icon: 'fas fa-eye', class: 'text-blue-600 hover:text-blue-900', onclick: (item) => `viewModule(${item.id})` },
        { name: 'edit', label: 'Edit', icon: 'fas fa-edit', class: 'text-indigo-600 hover:text-indigo-900', onclick: (item) => `editModule(${item.id})` },
        { name: 'actions', label: 'Actions', icon: 'fas fa-cogs', class: 'text-green-600 hover:text-green-900', onclick: (item) => `manageModuleActions(${item.id})` },
        { name: 'delete', label: 'Delete', icon: 'fas fa-trash', class: 'text-red-600 hover:text-red-900', onclick: (item) => `deleteModule(${item.id})` }
    ],
    pagination: pagination,
    search: search,
    filters: filters,
    showSearch: true,
    searchPlaceholder: 'Search modules...',
    emptyIcon: 'fas fa-puzzle-piece',
    emptyTitle: 'No Modules Found',
    emptyMessage: 'There are no modules to display.',
    emptySearchMessage: 'No modules match your search criteria.',
    headerButtons: [
        { text: 'Create Module', href: '#', icon: 'fas fa-plus', onclick: 'createModule()' }
    ]
}) %>

<!-- Enhanced Module View Modal -->
<div id="viewModuleModal" class="fixed inset-0 bg-black bg-opacity-60 overflow-y-auto h-full w-full hidden z-40 modal-backdrop">
    <div class="relative top-20 mx-auto p-0 border-0 max-w-2xl w-full mx-4 modal-container rounded-2xl bg-white transform transition-all duration-300 ease-out scale-95 opacity-0" id="viewModuleModalContainer">
        <!-- Modal Header with Gradient -->
        <div class="modal-header-gradient rounded-t-2xl p-6 text-white" style="background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <div class="flex-shrink-0 mr-4">
                        <i class="fas fa-puzzle-piece text-white text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold">Module Details</h3>
                </div>
                <button onclick="closeViewModal()" class="text-white hover:text-gray-200 transition-colors duration-200 p-2 rounded-full hover:bg-white hover:bg-opacity-20">
                    <i class="fas fa-times text-lg"></i>
                </button>
            </div>
        </div>
        
        <!-- Modal Body -->
        <div class="p-8">
            <div id="moduleDetails">
                <!-- Module details will be loaded here -->
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Module Edit Modal -->
<div id="editModuleModal" class="fixed inset-0 bg-black bg-opacity-60 overflow-y-auto h-full w-full hidden z-40 modal-backdrop">
    <div class="relative top-20 mx-auto p-0 border-0 max-w-2xl w-full mx-4 modal-container rounded-2xl bg-white transform transition-all duration-300 ease-out scale-95 opacity-0" id="editModuleModalContainer">
        <!-- Modal Header with Gradient -->
        <div class="modal-header-gradient rounded-t-2xl p-6 text-white" style="background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <div class="flex-shrink-0 mr-4">
                        <i class="fas fa-puzzle-piece text-white text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold">Edit Module</h3>
                </div>
                <button onclick="closeEditModal()" class="text-white hover:text-gray-200 transition-colors duration-200 p-2 rounded-full hover:bg-white hover:bg-opacity-20">
                    <i class="fas fa-times text-lg"></i>
                </button>
            </div>
        </div>
        
        <!-- Modal Body -->
        <div class="p-8">
            <form id="editModuleForm">
                <input type="hidden" id="editModuleId" name="id">
                
                <!-- Form Grid Layout -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <!-- Left Column -->
                    <div class="space-y-6">
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="editModuleName" class="block text-sm font-semibold text-gray-600 mb-3">Module Name</label>
                            <input type="text" id="editModuleName" name="name" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white" placeholder="Enter module name">
                        </div>
                        
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="editModuleDisplayName" class="block text-sm font-semibold text-gray-600 mb-3">Display Name</label>
                            <input type="text" id="editModuleDisplayName" name="display_name" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white" placeholder="Enter display name">
                        </div>
                        
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="editModuleIcon" class="block text-sm font-semibold text-gray-600 mb-3">Icon (FontAwesome class)</label>
                            <input type="text" id="editModuleIcon" name="icon" placeholder="fas fa-puzzle-piece" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white">
                        </div>
                    </div>
                    
                    <!-- Right Column -->
                    <div class="space-y-6">
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="editModuleRoute" class="block text-sm font-semibold text-gray-600 mb-3">Route</label>
                            <input type="text" id="editModuleRoute" name="route" placeholder="/admin/module" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white">
                        </div>
                        
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="editModuleOrder" class="block text-sm font-semibold text-gray-600 mb-3">Order Index</label>
                            <input type="number" id="editModuleOrder" name="order_index" min="0" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white">
                        </div>
                    </div>
                </div>
                
                <!-- Description Field (Full Width) -->
                <div class="detail-card rounded-xl p-4 mb-8" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                    <label for="editModuleDescription" class="block text-sm font-semibold text-gray-600 mb-3">Description</label>
                    <textarea id="editModuleDescription" name="description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white" placeholder="Enter module description"></textarea>
                </div>
                
                <!-- Modal Actions -->
                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="closeEditModal()" class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-300 transition-all duration-200 font-medium">
                        Cancel
                    </button>
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-xl hover:from-blue-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-300 transition-all duration-200 font-medium shadow-lg hover:shadow-xl transform hover:scale-105">
                        <i class="fas fa-save mr-2"></i>
                        Update Module
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Enhanced Create Module Modal -->
<div id="createModuleModal" class="fixed inset-0 bg-black bg-opacity-60 overflow-y-auto h-full w-full hidden z-40 modal-backdrop">
    <div class="relative top-20 mx-auto p-0 border-0 max-w-2xl w-full mx-4 modal-container rounded-2xl bg-white transform transition-all duration-300 ease-out scale-95 opacity-0" id="createModuleModalContainer">
        <!-- Modal Header with Gradient -->
        <div class="modal-header-gradient rounded-t-2xl p-6 text-white" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <div class="flex-shrink-0 mr-4">
                        <i class="fas fa-plus text-white text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold">Create Module</h3>
                </div>
                <button onclick="closeCreateModal()" class="text-white hover:text-gray-200 transition-colors duration-200 p-2 rounded-full hover:bg-white hover:bg-opacity-20">
                    <i class="fas fa-times text-lg"></i>
                </button>
            </div>
        </div>
        
        <!-- Modal Body -->
        <div class="p-8">
            <form id="createModuleForm">
                <!-- Form Grid Layout -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    <!-- Left Column -->
                    <div class="space-y-6">
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="createModuleName" class="block text-sm font-semibold text-gray-600 mb-3">Module Name *</label>
                            <input type="text" id="createModuleName" name="name" required class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white" placeholder="Enter module name">
                        </div>
                        
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="createModuleDisplayName" class="block text-sm font-semibold text-gray-600 mb-3">Display Name *</label>
                            <input type="text" id="createModuleDisplayName" name="display_name" required class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white" placeholder="Enter display name">
                        </div>
                        
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="createModuleIcon" class="block text-sm font-semibold text-gray-600 mb-3">Icon (FontAwesome class)</label>
                            <input type="text" id="createModuleIcon" name="icon" placeholder="fas fa-puzzle-piece" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white">
                        </div>
                    </div>
                    
                    <!-- Right Column -->
                    <div class="space-y-6">
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="createModuleRoute" class="block text-sm font-semibold text-gray-600 mb-3">Route</label>
                            <input type="text" id="createModuleRoute" name="route" placeholder="/admin/module" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white">
                        </div>
                        
                        <div class="detail-card rounded-xl p-4" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                            <label for="createModuleOrder" class="block text-sm font-semibold text-gray-600 mb-3">Order Index</label>
                            <input type="number" id="createModuleOrder" name="order_index" min="0" value="0" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white">
                        </div>
                    </div>
                </div>
                
                <!-- Description Field (Full Width) -->
                <div class="detail-card rounded-xl p-4 mb-8" style="background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%); border: 1px solid #e2e8f0;">
                    <label for="createModuleDescription" class="block text-sm font-semibold text-gray-600 mb-3">Description</label>
                    <textarea id="createModuleDescription" name="description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-white focus:bg-white" placeholder="Enter module description"></textarea>
                </div>
                
                <!-- Modal Actions -->
                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="closeCreateModal()" class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-300 transition-all duration-200 font-medium">
                        Cancel
                    </button>
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl hover:from-green-600 hover:to-emerald-700 focus:outline-none focus:ring-2 focus:ring-green-300 transition-all duration-200 font-medium shadow-lg hover:shadow-xl transform hover:scale-105">
                        <i class="fas fa-plus mr-2"></i>
                        Create Module
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
