                    <p class="text-xs text-gray-500 mt-1">Auto-generated from module and action</p>
                </div>
                
                <div class="mb-6">
                    <label for="createPermissionDisplayName" class="block text-sm font-semibold text-gray-700 mb-2">Display Name</label>
                    <input type="text" id="createPermissionDisplayName" name="display_name" required class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white">
                </div>
                
                <div class="mb-6">
                    <label for="createPermissionResource" class="block text-sm font-semibold text-gray-700 mb-2">Resource</label>
                    <input type="text" id="createPermissionResource" name="resource" required class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white">
                </div>
                
                <div class="mb-6">
                    <label for="createPermissionDescription" class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                    <textarea id="createPermissionDescription" name="description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white"></textarea>
                </div>
                
                <!-- Modal Actions -->
                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="closeCreateModal()" class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-300 transition-all duration-200 font-medium">
                        Cancel
                    </button>
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-xl hover:from-green-600 hover:to-emerald-700 focus:outline-none focus:ring-2 focus:ring-green-300 transition-all duration-200 font-medium shadow-lg hover:shadow-xl transform hover:scale-105">
                        <i class="fas fa-plus mr-2"></i>
                        Create Permission
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>