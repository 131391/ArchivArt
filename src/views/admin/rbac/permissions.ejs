<!-- Include Common Table Component -->
<%- include('../../components/table', {
    title: title,
    data: data,
    showSearch: true,
    showFilters: false,
    searchPlaceholder: 'Search permissions...',
    columns: [
        { key: 'id', label: 'ID', sortable: true },
        { key: 'display_name', label: 'Permission', sortable: true, type: 'custom', formatter: 'formatPermission' },
        { key: 'name', label: 'Name', sortable: true, type: 'custom', formatter: 'formatPermissionName' },
        { key: 'module', label: 'Module', sortable: true, type: 'custom', formatter: 'formatModule' },
        { key: 'action', label: 'Action', sortable: true, type: 'custom', formatter: 'formatAction' },
        { key: 'resource', label: 'Resource', sortable: true, type: 'custom', formatter: 'formatResource' },
        { key: 'description', label: 'Description', sortable: true, type: 'custom', formatter: 'formatDescription' }
    ],
    actions: [
        { name: 'view', label: 'View', icon: 'fas fa-eye', class: 'text-blue-600 hover:text-blue-900', title: 'View Permission Details', onclick: (item) => `viewPermission(${item.id})` },
        { name: 'edit', label: 'Edit', icon: 'fas fa-edit', class: 'text-indigo-600 hover:text-indigo-900', title: 'Edit Permission', onclick: (item) => `editPermission(${item.id})` },
        { name: 'delete', label: 'Delete', icon: 'fas fa-trash', class: 'text-red-600 hover:text-red-900', title: 'Delete Permission', onclick: (item) => `deletePermission(${item.id})` }
    ],
    pagination: pagination,
    search: search,
    filters: filters,
    showSearch: true,
    searchPlaceholder: 'Search permissions...',
    emptyIcon: 'fas fa-key',
    emptyTitle: 'No Permissions Found',
    emptyMessage: 'There are no permissions to display.',
    emptySearchMessage: 'No permissions match your search criteria.',
    headerButtons: [
        { text: 'Create Permission', href: '#', icon: 'fas fa-plus', onclick: 'createPermission()' }
    ]
}) %>

<!-- Enhanced Permission View Modal -->
<div id="viewPermissionModal" class="fixed inset-0 bg-black bg-opacity-60 overflow-y-auto h-full w-full hidden z-40 modal-backdrop">
    <div class="relative top-20 mx-auto p-0 border-0 max-w-2xl w-full mx-4 modal-container rounded-2xl bg-white transform transition-all duration-300 ease-out scale-95 opacity-0" id="viewPermissionModalContainer">
        <!-- Modal Header with Gradient -->
        <div class="modal-header-gradient rounded-t-2xl p-6 text-white" style="background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <div class="flex-shrink-0 mr-4">
                        <i class="fas fa-key text-white text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold">Permission Details</h3>
                </div>
                <button onclick="closeViewModal()" class="text-white hover:text-gray-200 transition-colors duration-200 p-2 rounded-full hover:bg-white hover:bg-opacity-20">
                    <i class="fas fa-times text-lg"></i>
                </button>
            </div>
        </div>
        
        <!-- Modal Body -->
        <div class="p-8">
            <div id="permissionDetails">
                <!-- Permission details will be loaded here -->
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Permission Edit Modal -->
<div id="editPermissionModal" class="fixed inset-0 bg-black bg-opacity-60 overflow-y-auto h-full w-full hidden z-40 modal-backdrop">
    <div class="relative top-20 mx-auto p-0 border-0 max-w-2xl w-full mx-4 modal-container rounded-2xl bg-white transform transition-all duration-300 ease-out scale-95 opacity-0" id="editPermissionModalContainer">
        <!-- Modal Header with Gradient -->
        <div class="modal-header-gradient rounded-t-2xl p-6 text-white" style="background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <div class="flex-shrink-0 mr-4">
                        <i class="fas fa-key text-white text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold">Edit Permission</h3>
                </div>
                <button onclick="closeEditModal()" class="text-white hover:text-gray-200 transition-colors duration-200 p-2 rounded-full hover:bg-white hover:bg-opacity-20">
                    <i class="fas fa-times text-lg"></i>
                </button>
            </div>
        </div>
        
        <!-- Modal Body -->
        <div class="p-8">
            <form id="editPermissionForm">
                <input type="hidden" id="editPermissionId" name="id">
                
                <!-- Module and Action fields at the top -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label for="editPermissionModule" class="block text-sm font-semibold text-gray-700 mb-2">Module</label>
                        <select id="editPermissionModule" name="module" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white">
                            <option value="">Select Module</option>
                        </select>
                    </div>
                    
                    <div>
                        <label for="editPermissionAction" class="block text-sm font-semibold text-gray-700 mb-2">Action</label>
                        <select id="editPermissionAction" name="action" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white">
                            <option value="">Select Action</option>
                        </select>
                        <p class="text-xs text-gray-500 mt-1">Actions are filtered by the selected module</p>
                    </div>
                </div>
                
                <div class="mb-6">
                    <label for="editPermissionName" class="block text-sm font-semibold text-gray-700 mb-2">Permission Name</label>
                    <input type="text" id="editPermissionName" name="name" readonly class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm bg-gray-100 text-gray-600 cursor-not-allowed">
                    <p class="text-xs text-gray-500 mt-1">Auto-generated from module and action</p>
                </div>
                
                <div class="mb-6">
                    <label for="editPermissionDisplayName" class="block text-sm font-semibold text-gray-700 mb-2">Display Name</label>
                    <input type="text" id="editPermissionDisplayName" name="display_name" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white">
                </div>
                
                <div class="mb-6">
                    <label for="editPermissionResource" class="block text-sm font-semibold text-gray-700 mb-2">Resource</label>
                    <input type="text" id="editPermissionResource" name="resource" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white">
                </div>
                
                <div class="mb-6">
                    <label for="editPermissionDescription" class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                    <textarea id="editPermissionDescription" name="description" rows="3" class="w-full px-4 py-3 border border-gray-300 rounded-xl shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-gray-50 focus:bg-white"></textarea>
                </div>
                
                <!-- Modal Actions -->
                <div class="flex justify-end space-x-4">
                    <button type="button" onclick="closeEditModal()" class="px-6 py-3 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-300 transition-all duration-200 font-medium">
                        Cancel
                    </button>
                    <button type="submit" class="px-6 py-3 bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-xl hover:from-blue-600 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-blue-300 transition-all duration-200 font-medium shadow-lg hover:shadow-xl transform hover:scale-105">
                        <i class="fas fa-save mr-2"></i>
                        Update Permission
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Enhanced Create Permission Modal -->
