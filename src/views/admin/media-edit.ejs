<!-- Edit Media Page -->
<div class="flex-1 min-h-screen bg-gray-50">
    <div class="w-full px-4 sm:px-6 lg:px-8 py-6">
        <!-- Page Header -->
        <div class="mb-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Edit Media</h1>
                    <p class="mt-1 text-sm text-gray-600">Update media information and settings</p>
                </div>
                <div class="flex space-x-3">
                    <a href="/admin/media/view/<%= media.id %>" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to View
                    </a>
                    <a href="/admin/media" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <i class="fas fa-list mr-2"></i>
                        Media List
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            
            <!-- Media Preview Card -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <div class="mb-4">
                    <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                        <i class="fas fa-<%= media.media_type === 'video' ? 'video' : media.media_type === 'audio' ? 'music' : 'image' %> mr-2 text-indigo-600"></i>
                        Current Media
                    </h3>
                    <p class="text-sm text-gray-600">Preview of the current media file</p>
                </div>

                <!-- Media Preview -->
                <div class="bg-gray-100 rounded-lg p-4 mb-4">
                    <% if (media.media_type === 'video') { %>
                        <video 
                            class="w-full h-48 bg-black rounded-lg" 
                            controls 
                            preload="metadata"
                            poster="<%= scanningImageUrl(media.scanning_image) %>"
                        >
                            <source src="<%= mediaUrl(media.file_path) %>" type="<%= media.mime_type %>">
                            Your browser does not support the video tag.
                        </video>
                    <% } else if (media.media_type === 'audio') { %>
                        <div class="bg-black rounded-lg p-6 text-center">
                            <i class="fas fa-music text-white text-3xl mb-3"></i>
                            <audio 
                                class="w-full" 
                                controls 
                                preload="metadata"
                            >
                                <source src="<%= mediaUrl(media.file_path) %>" type="<%= media.mime_type %>">
                                Your browser does not support the audio tag.
                            </audio>
                        </div>
                    <% } else { %>
                        <img 
                            src="<%= mediaUrl(media.file_path) %>" 
                            alt="<%= media.title %>" 
                            class="w-full h-48 object-cover rounded-lg"
                        >
                    <% } %>
                </div>

                <!-- Media Info -->
                <div class="space-y-2 text-sm">
                    <div class="flex justify-between">
                        <span class="text-gray-600">File Size:</span>
                        <span class="font-medium"><%= (media.file_size / 1024 / 1024).toFixed(2) %> MB</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">MIME Type:</span>
                        <span class="font-medium"><%= media.mime_type %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Status:</span>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= media.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                            <%= media.is_active ? 'Active' : 'Inactive' %>
                        </span>
                    </div>
                </div>
            </div>

            <!-- Edit Form Card -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <div class="mb-4">
                    <h3 class="text-lg font-semibold text-gray-900">Edit Details</h3>
                    <p class="text-sm text-gray-600">Update media information and settings</p>
                </div>
                
                <form id="edit-media-form" class="space-y-4">
                    <input type="hidden" id="media-id" value="<%= media.id %>">
                    
                    <div>
                        <label for="edit-title" class="block text-sm font-medium text-gray-700 mb-1">Title *</label>
                        <input type="text" id="edit-title" name="title" value="<%= media.title %>" placeholder="Enter media title" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" required>
                    </div>
                    
                    <div>
                        <label for="edit-description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                        <textarea id="edit-description" name="description" rows="4" placeholder="Enter media description" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"><%= media.description || '' %></textarea>
                    </div>

                    <div>
                        <label for="edit-media-type" class="block text-sm font-medium text-gray-700 mb-1">Media Type *</label>
                        <select id="edit-media-type" name="media_type" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" required>
                            <option value="image" <%= media.media_type === 'image' ? 'selected' : '' %>>Image</option>
                            <option value="video" <%= media.media_type === 'video' ? 'selected' : '' %>>Video</option>
                            <option value="audio" <%= media.media_type === 'audio' ? 'selected' : '' %>>Audio</option>
                        </select>
                    </div>

                    <div>
                        <label for="edit-scanning-image" class="block text-sm font-medium text-gray-700 mb-1">
                            <i class="fas fa-image mr-1"></i>Scanning Image
                        </label>
                        <p class="text-xs text-gray-500 mb-2">Current scanning image (optional to change)</p>
                        
                        <!-- Current Scanning Image Display -->
                        <div class="mb-3">
                            <div class="bg-gray-50 rounded-lg p-3 border">
                                <div class="flex items-center space-x-3">
                                    <div class="flex-shrink-0">
                                        <img src="<%= scanningImageUrl(media.scanning_image) %>" alt="Current scanning image" class="h-12 w-12 rounded object-cover">
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-medium text-gray-900">Current Scanning Image</p>
                                        <p class="text-sm text-gray-500">Click below to change</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- New Scanning Image Upload -->
                        <input type="file" id="edit-scanning-image-input" accept="image/*" style="display: none;">
                        <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center hover:border-blue-400 hover:bg-blue-50 transition-all duration-200 cursor-pointer" id="edit-scanning-image-drop-zone">
                            <div class="space-y-2">
                                <div class="mx-auto w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center">
                                    <i class="fas fa-upload text-sm text-gray-400"></i>
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-gray-900">Change Scanning Image</p>
                                    <p class="text-xs text-gray-600">Click to upload new image</p>
                                    <p class="text-xs text-gray-500 mt-1">JPEG, PNG, GIF, WebP (Max: 10MB)</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- New Scanning Image Preview -->
                        <div id="edit-scanning-image-preview" class="mt-3 hidden">
                            <div class="bg-gray-50 rounded-lg p-3">
                                <div class="flex items-center space-x-3">
                                    <div class="flex-shrink-0">
                                        <img id="edit-scanning-image-thumbnail" class="h-12 w-12 rounded object-cover" src="" alt="New scanning image preview">
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-medium text-gray-900 truncate" id="edit-scanning-image-name"></p>
                                        <p class="text-sm text-gray-500" id="edit-scanning-image-size"></p>
                                    </div>
                                    <button type="button" class="text-red-500 hover:text-red-700" id="remove-edit-scanning-image">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label class="flex items-center">
                            <input type="checkbox" id="edit-is-active" name="is_active" <%= media.is_active ? 'checked' : '' %> class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
                            <span class="ml-2 text-sm text-gray-700">Active (visible to users)</span>
                        </label>
                    </div>

                    <div class="flex space-x-3 pt-4">
                        <button type="submit" id="edit-submit-button" class="flex-1 bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors flex items-center justify-center">
                            <i class="fas fa-save mr-2"></i>
                            <span id="edit-submit-text">Update Media</span>
                        </button>
                        <button type="button" id="edit-cancel-button" class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                            Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Media Edit JavaScript - loaded from admin layout -->
