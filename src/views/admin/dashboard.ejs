<!-- Dashboard Content -->
<div class="space-y-6">
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Total Users -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-users text-2xl text-blue-600"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
                            <dd class="text-lg font-medium text-gray-900"><%= stats.totalUsers || 0 %></dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <div class="text-sm">
                    <a href="/admin/users" class="font-medium text-blue-600 hover:text-blue-500">
                        View all users
                    </a>
                </div>
            </div>
        </div>

        <!-- Total Media -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-images text-2xl text-green-600"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Total Media</dt>
                            <dd class="text-lg font-medium text-gray-900"><%= stats.totalMedia || 0 %></dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <div class="text-sm">
                    <a href="/admin/media" class="font-medium text-green-600 hover:text-green-500">
                        View all media
                    </a>
                </div>
            </div>
        </div>

        <!-- Videos -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-video text-2xl text-purple-600"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Videos</dt>
                            <dd class="text-lg font-medium text-gray-900"><%= stats.totalVideos || 0 %></dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <div class="text-sm">
                    <a href="/admin/media?type=video" class="font-medium text-purple-600 hover:text-purple-500">
                        View videos
                    </a>
                </div>
            </div>
        </div>

        <!-- Audio -->
        <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i class="fas fa-music text-2xl text-orange-600"></i>
                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">Audio</dt>
                            <dd class="text-lg font-medium text-gray-900"><%= stats.totalAudio || 0 %></dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <div class="text-sm">
                    <a href="/admin/media?type=audio" class="font-medium text-orange-600 hover:text-orange-500">
                        View audio
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Recent Users -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    <i class="fas fa-user-plus mr-2"></i>Recent Users
                </h3>
                <div class="flow-root">
                    <ul class="-my-5 divide-y divide-gray-200">
                        <% if (recentUsers && recentUsers.length > 0) { %>
                            <% recentUsers.forEach(user => { %>
                                <li class="py-4">
                                    <div class="flex items-center space-x-4">
                                        <div class="flex-shrink-0">
                                            <img class="h-8 w-8 rounded-full" src="https://ui-avatars.com/api/?name=<%= user.name %>&background=random" alt="<%= user.name %>">
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <p class="text-sm font-medium text-gray-900 truncate">
                                                <%= user.name %>
                                            </p>
                                            <p class="text-sm text-gray-500 truncate">
                                                <%= user.email %>
                                            </p>
                                        </div>
                                        <div class="flex-shrink-0 text-sm text-gray-500">
                                            <%= new Date(user.created_at).toLocaleDateString() %>
                                        </div>
                                    </div>
                                </li>
                            <% }); %>
                        <% } else { %>
                            <li class="py-4 text-center text-gray-500">
                                No recent users
                            </li>
                        <% } %>
                    </ul>
                </div>
                <div class="mt-6">
                    <a href="/admin/users" class="w-full flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        View all users
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Media -->
        <div class="bg-white shadow rounded-lg">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                    <i class="fas fa-upload mr-2"></i>Recent Media
                </h3>
                <div class="flow-root">
                    <ul class="-my-5 divide-y divide-gray-200">
                        <% if (recentMedia && recentMedia.length > 0) { %>
                            <% recentMedia.forEach(media => { %>
                                <li class="py-4">
                                    <div class="flex items-center space-x-4">
                                        <div class="flex-shrink-0">
                                            <img class="h-8 w-8 rounded" src="<%= media.scanning_image %>" alt="Media thumbnail">
                                        </div>
                                        <div class="flex-1 min-w-0">
                                            <p class="text-sm font-medium text-gray-900 truncate">
                                                <%= media.title || 'Untitled' %>
                                            </p>
                                            <p class="text-sm text-gray-500 truncate">
                                                <i class="fas fa-<%= media.media_type === 'video' ? 'video' : 'music' %> mr-1"></i>
                                                <%= media.media_type %>
                                            </p>
                                        </div>
                                        <div class="flex-shrink-0 text-sm text-gray-500">
                                            <%= new Date(media.created_at).toLocaleDateString() %>
                                        </div>
                                    </div>
                                </li>
                            <% }); %>
                        <% } else { %>
                            <li class="py-4 text-center text-gray-500">
                                No recent media
                            </li>
                        <% } %>
                    </ul>
                </div>
                <div class="mt-6">
                    <a href="/admin/media" class="w-full flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        View all media
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
                <i class="fas fa-bolt mr-2"></i>Quick Actions
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <a href="/admin/upload" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    <i class="fas fa-upload mr-2"></i>
                    Upload Media
                </a>
                <a href="/admin/users" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    <i class="fas fa-users mr-2"></i>
                    Manage Users
                </a>
                <a href="/admin/settings" class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    <i class="fas fa-cog mr-2"></i>
                    Settings
                </a>
            </div>
        </div>
    </div>
</div>
