<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ArchivArt - <%= title %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Prism.js for syntax highlighting -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/components/prism-core.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/autoloader/prism-autoloader.min.js"></script>
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <a href="/" class="text-xl font-bold text-indigo-600">
                            <i class="fas fa-magic mr-2"></i>ArchivArt
                        </a>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/" class="text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium">
                        Home
                    </a>
                    <a href="/admin/login" class="bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700">
                        Admin Login
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div class="px-4 py-6 sm:px-0">
            <div class="bg-white shadow rounded-lg">
                <div class="px-4 py-5 sm:p-6">
                    <h1 class="text-3xl font-bold text-gray-900 mb-8">
                        <i class="fas fa-book mr-3"></i>API Documentation
                    </h1>

                    <!-- Base URL -->
                    <div class="mb-8">
                        <h2 class="text-xl font-semibold text-gray-900 mb-2">Base URL</h2>
                        <div class="bg-gray-100 p-4 rounded-md">
                            <code class="text-lg font-mono">http://localhost:3000/api</code>
                        </div>
                    </div>

                    <!-- Authentication -->
                    <div class="mb-8">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">
                            <i class="fas fa-lock mr-2"></i>Authentication
                        </h2>
                        <p class="text-gray-600 mb-4">
                            Most API endpoints require authentication using JWT tokens. Include the token in the Authorization header:
                        </p>
                        <div class="bg-gray-100 p-4 rounded-md">
                            <code class="text-sm font-mono">Authorization: Bearer YOUR_JWT_TOKEN</code>
                        </div>
                    </div>

                    <!-- Endpoints -->
                    <div class="space-y-8">
                        <% endpoints.forEach(endpoint => { %>
                            <div class="border border-gray-200 rounded-lg p-6">
                                <div class="flex items-center mb-4">
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= endpoint.method === 'POST' ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                                        <%= endpoint.method %>
                                    </span>
                                    <code class="ml-4 text-lg font-mono text-gray-900"><%= endpoint.path %></code>
                                </div>
                                
                                <p class="text-gray-600 mb-4"><%= endpoint.description %></p>
                                
                                <% if (endpoint.headers) { %>
                                    <div class="mb-4">
                                        <h4 class="font-semibold text-gray-900 mb-2">Headers:</h4>
                                        <div class="bg-gray-100 p-3 rounded-md">
                                            <% Object.entries(endpoint.headers).forEach(([key, value]) => { %>
                                                <div class="text-sm font-mono">
                                                    <span class="font-semibold"><%= key %>:</span> <%= value %>
                                                </div>
                                            <% }); %>
                                        </div>
                                    </div>
                                <% } %>
                                
                                <% if (endpoint.body) { %>
                                    <div class="mb-4">
                                        <h4 class="font-semibold text-gray-900 mb-2">Request Body:</h4>
                                        <pre class="bg-gray-100 p-3 rounded-md overflow-x-auto"><code class="language-json"><%= JSON.stringify(endpoint.body, null, 2) %></code></pre>
                                    </div>
                                <% } %>
                                
                                <% if (endpoint.query) { %>
                                    <div class="mb-4">
                                        <h4 class="font-semibold text-gray-900 mb-2">Query Parameters:</h4>
                                        <div class="bg-gray-100 p-3 rounded-md">
                                            <div class="text-sm font-mono">
                                                <span class="font-semibold"><%= endpoint.query %>:</span> Required
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                                
                                <div class="mt-4">
                                    <h4 class="font-semibold text-gray-900 mb-2">Example Response:</h4>
                                    <pre class="bg-gray-100 p-3 rounded-md overflow-x-auto"><code class="language-json">{
  "success": true,
  "message": "Operation completed successfully",
  "data": { ... }
}</code></pre>
                                </div>
                            </div>
                        <% }); %>
                    </div>

                    <!-- Error Handling -->
                    <div class="mt-12">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">
                            <i class="fas fa-exclamation-triangle mr-2"></i>Error Handling
                        </h2>
                        <p class="text-gray-600 mb-4">
                            The API uses standard HTTP status codes and returns error messages in JSON format:
                        </p>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="bg-red-50 border border-red-200 rounded-md p-4">
                                <h4 class="font-semibold text-red-800 mb-2">400 - Bad Request</h4>
                                <pre class="text-sm text-red-700"><code>{
  "error": "Validation failed",
  "details": [...]
}</code></pre>
                            </div>
                            
                            <div class="bg-red-50 border border-red-200 rounded-md p-4">
                                <h4 class="font-semibold text-red-800 mb-2">401 - Unauthorized</h4>
                                <pre class="text-sm text-red-700"><code>{
  "error": "Access token required"
}</code></pre>
                            </div>
                            
                            <div class="bg-red-50 border border-red-200 rounded-md p-4">
                                <h4 class="font-semibold text-red-800 mb-2">403 - Forbidden</h4>
                                <pre class="text-sm text-red-700"><code>{
  "error": "Admin access required"
}</code></pre>
                            </div>
                            
                            <div class="bg-red-50 border border-red-200 rounded-md p-4">
                                <h4 class="font-semibold text-red-800 mb-2">500 - Server Error</h4>
                                <pre class="text-sm text-red-700"><code>{
  "error": "Internal server error"
}</code></pre>
                            </div>
                        </div>
                    </div>

                    <!-- Rate Limiting -->
                    <div class="mt-12">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">
                            <i class="fas fa-tachometer-alt mr-2"></i>Rate Limiting
                        </h2>
                        <p class="text-gray-600">
                            API requests are rate limited to prevent abuse. Current limits:
                        </p>
                        <ul class="mt-2 text-gray-600 list-disc list-inside">
                            <li>Authentication endpoints: 5 requests per minute</li>
                            <li>Media upload endpoints: 10 requests per hour</li>
                            <li>Scan endpoints: 100 requests per hour</li>
                        </ul>
                    </div>

                    <!-- SDK Examples -->
                    <div class="mt-12">
                        <h2 class="text-xl font-semibold text-gray-900 mb-4">
                            <i class="fas fa-code mr-2"></i>SDK Examples
                        </h2>
                        
                        <div class="space-y-6">
                            <div>
                                <h3 class="font-semibold text-gray-900 mb-2">Flutter/Dart Example:</h3>
                                <pre class="bg-gray-100 p-4 rounded-md overflow-x-auto"><code class="language-dart">// Register user
final response = await http.post(
  Uri.parse('http://localhost:3000/api/auth/register'),
  headers: {'Content-Type': 'application/json'},
  body: jsonEncode({
    'name': 'John Doe',
    'email': 'john@example.com',
    'password': 'password123'
  }),
);

// Login user
final loginResponse = await http.post(
  Uri.parse('http://localhost:3000/api/auth/login'),
  headers: {'Content-Type': 'application/json'},
  body: jsonEncode({
    'email': 'john@example.com',
    'password': 'password123'
  }),
);

final token = jsonDecode(loginResponse.body)['token'];

// Scan image
final scanResponse = await http.get(
  Uri.parse('http://localhost:3000/api/media/scan?image_hash=abc123'),
  headers: {'Authorization': 'Bearer $token'},
);</code></pre>
                            </div>
                            
                            <div>
                                <h3 class="font-semibold text-gray-900 mb-2">JavaScript Example:</h3>
                                <pre class="bg-gray-100 p-4 rounded-md overflow-x-auto"><code class="language-javascript">// Register user
const registerResponse = await fetch('http://localhost:3000/api/auth/register', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
  },
  body: JSON.stringify({
    name: 'John Doe',
    email: 'john@example.com',
    password: 'password123'
  })
});

// Login user
const loginResponse = await fetch('http://localhost:3000/api/auth/login', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
  },
  body: JSON.stringify({
    email: 'john@example.com',
    password: 'password123'
  })
});

const { token } = await loginResponse.json();

// Scan image
const scanResponse = await fetch('http://localhost:3000/api/media/scan?image_hash=abc123', {
  headers: {
    'Authorization': `Bearer ${token}`
  }
});</code></pre>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
