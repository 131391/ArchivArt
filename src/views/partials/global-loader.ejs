                <!-- Inner pulsing dot -->
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-3 h-3 bg-indigo-600 rounded-full animate-pulse"></div>
            </div>
        </div>
        
        <!-- Loading Text -->
        <div class="text-center">
